#!/usr/bin/env ruby

require_relative '../config/environment'

puts "Welcome to Tic Tac Toe!"

input = nil

while input != "exit"
  puts "Enter the number of players for the game or type exit: 0, 1, 2"
  input = gets.strip

  if input.to_i == 0
    game = Game.new(player_1 = Players::Computer.new("X"), player_2 = Players::Computer.new("O"))
    game.board.display
    game.play
  elsif input.to_i == 1
    puts "Who should go first and be X: Computer [A] or Human [B]?"
    player = gets.strip.downcase
    if player == "a"
      game = Game.new(player_1 = Players::Computer.new("X"), player_2 = Players::Human.new("O"))
      game.board.display
      game.play
    elsif player == "b"
      game = Game.new(player_1 = Players::Computer.new("X"), player_2 = Players::Human.new("O"))
      game.board.display
      game.play
    else
      puts "Enter A or B or exit"
    end
  elsif input.to_i == 2
    game = Game.new
    game.board.display
    game.play
  else
    puts "Enter 0, 1, 2, or exit"
  end
end
